<div class="container">
  <br><br>
  <div class="row">

    <!-- show form column -->
    <div class="col-md-10 personal-info">
      <h1><%= @undergrad_university.university_name %></h1>
      <form class="form-horizontal" role="form">

        <div class="form-group">
          <label class="col-md-3 control-label">Description:</label>
          <div class="col-md-8">
            <input class="form-control" type="text" wrap="soft" value="<%= @undergrad_university.university_desc%>" readonly>
          </div>
        </div>
        <div class="form-group">
          <label class="col-md-3 control-label">Location:</label>
          <div class="col-md-8">
            <input class="form-control" type="text" value="<%= @undergrad_university.location%>" readonly>
          </div>
        </div>
        <div class="form-group">
          <label class="col-md-3 control-label">Institution Type:</label>
          <div class="col-md-8">
            <input class="form-control" type="text" value="<%= @undergrad_university.university_type%>" readonly>
          </div>
        </div>
        <div class="form-group">
          <label class="col-md-3 control-label">Acceptance Rate:</label>
          <div class="col-md-8">
            <input class="form-control" type="text" value="<%= @undergrad_university.acceptance_rate%>" readonly>
          </div>
        </div>
        <div class="form-group">
          <label class="col-md-3 control-label">Website:</label>
          <div class="col-md-8">
            <input class="form-control" type="text" value="<%= @undergrad_university.university_link%>" readonly>
          </div>
        </div>
        <div class="form-group">
          <label class="col-md-3 control-label">Ranking:</label>
          <div class="col-md-8">
            <% @undergrad_university.rankings.each do |ranking| %>
              <input class="form-control" type="text" value="#<%= ranking.rank %> <%= ranking.rank_type.name %>" readonly>
            <% end %>
          </div>
        </div>
      </form>

    </div>
    <hr>
  </div>
</div>