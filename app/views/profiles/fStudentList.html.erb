<%= stylesheet_link_tag 'sProfileNav' %>
<%= javascript_include_tag 'fstudentList' %>

<link href="https://cdn.datatables.net/1.10.19/css/jquery.dataTables.min.css" rel="stylesheet" />
<link href="https://cdn.datatables.net/select/1.3.0/css/select.bootstrap.min.css" rel="stylesheet" />
<script src="https://ajax.googleapis.com/ajax/libs/jquery/2.1.3/jquery.min.js"></script>
<script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.2/js/bootstrap.min.js"></script>
<%= javascript_include_tag 'yeti/research_interests' %>
<%= stylesheet_link_tag    "application", :media => "all", 'data-turbolinks-track' => true %>
<%= javascript_include_tag "application" %>
<%if faculty_signed_in? %>
  <h4 style = "padding-left: 20px"> <%= "#{current_faculty.first_name} #{current_faculty.last_name}, #{current_faculty.university.university_name}" %></h4>
<%end %>
<hr>
<div class="well row">
  <%= form_tag url_for(:controller => 'profiles', :action => 'filter'), :method => :get do |f| %>
    <div class="row">
    <div class="col-md-4">
      <%= label_tag 'research_interests','Research Interests'%>
      <%if @research_interests then%>
        <select id="research-interests-multiselect" name=”multicheckbox[]”>
          <%@research_interests.each do |research_interest|%>
            <option value="<%=research_interest.id %>"><%=research_interest.name %></option>
          <% end %>
          <option id="multiple-select" value="multiple">**Multiple**</option>
        </select>
      <%end %>
    </div>
    <div class="col-md-4">
        <%= label_tag 'undergrad_college','Undergraduate College'%>
        <%if @undergrad_universities then%>
          <select id="undergrad_university" name="undergrad_university">
            <%@undergrad_universities.each do |undergrad_university|%>
              <option value="<%=undergrad_university.id %>"><%=undergrad_university.university_name %></option>
            <% end %>
            <option value="all">**All**</option>
          </select>
        <%end %>
      </div>
    <div class="col-md-4">

    </div>
    </div>
    <div class="row">
      <div class="col-md-4">
        <label for="score">Cumulative GPA range:</label>
        <input type="text" class="score" id="cgpa_score" name="cgpa_score" readonly style="border:0; color:#f6931f; font-weight:bold;">
        <div id="slider-range-cgpa"></div>
      </div>
      <div class="col-md-4">
        <label for="score">GRE-Quantitative range:</label>
        <input type="text" class="score" id="greq_score" name="greq_score" style="border:0; color:#f6931f; font-weight:bold;">
        <div id="slider-range-greq"></div>
      </div>
      <div class="col-md-4">
        <label for="score">GRE-Verbal range:</label>
        <input type="text" class="score" id="grev_score" name="grev_score" style="border:0; color:#f6931f; font-weight:bold;">
        <div id="slider-range-grev"></div>
      </div>
    </div>
    <div class="row">
      <div class="col-md-4">
        <label for="score">MS Degree Objective range:</label>
        <input type="text" class="score" id="msob_score" name="msob_score" style="border:0; color:#f6931f; font-weight:bold;">
        <div id="slider-range-msob"></div>
      </div>
      <div class="col-md-4">
        <label for="score">PhD Degree Objective range:</label>
        <input type="text" class="score" id="phdo_score" name="phdo_score" style="border:0; color:#f6931f; font-weight:bold;">
        <div id="slider-range-phdo"></div>
      </div>
    </div>
    <br/>
    <div class="col-md-2">
      <%= submit_tag "Filter", class: 'btn btn-info btn-block' %>
    </div>
  <% end %>
</div>


<table id="dtOrderExample" class="table table-striped table-bordered table-sm" cellspacing="0" width="100%">
  <thead>
  <tr>
    <th class="th-sm">Name
    </th>
    <th class="th-sm">Undergrad College
    </th>
    <th class="th-sm">Research Area
    </th>
    <th class="th-sm">GPA
    </th>
    <th class="th-sm">GRE(Q)
    </th>
    <th class="th-sm">GRE(V)
    </th>
    <th class="th-sm">MS/PhD
    </th>
  </tr>
  </thead>
  <tbody>
  <% @applications.each do |applicant| %>
    <%if applicant.university_id == current_faculty.university_id %>
    <tr>
      <td><%="#{applicant.profile.student.first_name} #{applicant.profile.student.last_name}"%></td>
      <td><%="#{applicant.profile.undergrad_universities[0].university_name}" %></td>
      <td><%="Research Area" %></td>
      <td><%="#{applicant.profile.cgpa}"%></td>
      <td><%="#{applicant.profile.gre_quant}" %></td>
      <td><%="#{applicant.profile.gre_verbal}" %></td>
      <%if applicant.profile.degree_objective_master == 1 %>
        <td id = "msphd"><%= "MS"%></td>
          <%if applicant.profile.degree_objective_ == 0 %>
           <td id = "msphd"><%= "MS + PhD"%></td>
          <%end %>
      <%elsif applicant.profile.degree_objective_master == 0 && applicant.profile.degree_objective_phd == 1 %>
        <td id = "msphd"><%= "PhD"%></td>
      <%else %>
        <td id = "msphd"><%= ""%></td>
      <%end %>
    </tr>
    <%end %>
  <% end %>
  </tbody>
</table>
</hr>