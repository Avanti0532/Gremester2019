
<script src="//code.jquery.com/jquery-1.11.1.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-datepicker/1.3.0/js/bootstrap-datepicker.js"></script>
<%= javascript_include_tag 'sInterestedSchools' %>
<!------ Include the above in your HEAD tag ---------->
<%= render "profiles/sProfileNav" %>
<div class="container">
  <h2>Schools of Interest</h2>
  <table id="myTable" class=" table order-list">
    <thead>
    <tr>
      <td>University Name</td>
      <td>Application Status?</td>
      <td>Date</td>
    </tr>
    </thead>
    <tbody>
    <tr>
      <td class="col-sm-2">
        <input class= "form-control" list="university-name" id="univ_name" name="univ_name" />
          <datalist id="university-name">
            <% University.all.each do |university| %>
              <option value="<%= university.university_name %>"></option>
            <% end %>
          </datalist>
      </td>

      <td class="col-sm-2">
        <div class="form-group">
          <select class="form-control" id="sel1">
            <option disabled selected value> -- select an option -- </option>
            <option>Applied - Accepted</option>
            <option>Applied - Rejected</option>
            <option>Applied - Pending Decision</option>
            <option>Interested</option>
          </select>
        </div>
      </td>

      <td class="col-sm-2" >
        <div class="input-group date datepicker-me" id="datetimepicker0">
          <input type="text" name="datepicker" class="form-control" value=""/>
          <label class="input-group-addon btn" for="datepicker">
            <span class="glyphicon glyphicon-calendar">
            </span>
          </label>
        </div>
      </td>

      <td class="col-sm-2"><a class="deleteRow"></a>

      </td>
    </tr>
    </tbody>
    <tfoot>
    <tr>
      <td colspan="5" style="text-align: left;">
        <input type="button" class="btn btn-default " id="addrow" value="Add School" />
        <br>
        <br>
        <input type="button" class="btn btn-primary " id="saveSchools" value="Save" />
      </td>
    </tr>
    <tr>
    </tr>
    </tfoot>
  </table>
</div>

