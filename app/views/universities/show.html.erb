<div class="container">

  <section class="home_banner_area_university">
    <div class="banner_inner d-flex align-items-center">
      <div class="overlay bg-parallax" data-stellar-ratio="0.9" data-stellar-vertical-offset="0" data-background="" style="transform: translateY(-23.5182px);"></div>
      <div class="container">
        <div class="col-lg-12">
          <h1><%= @university.university_name %></h1>
        </div>
      </div>
    </div>
  </section>
  <br>
  <br>
  <br>
  <h3 style="font-size: 21px; font-family: 'Karla', sans-serif;"><%= @university.university_desc %></h3>

  <br>
  <br>

  <div class="col-md-3">
    <h2 style="font-size: 30px; font-family: 'Karla', sans-serif; font-weight: bold">Ranking</h2>
    <h3 style="font-size: 24px; font-family: 'Karla', sans-serif;">#<%= @university.rank %></h3>
  </div>


  <div class="col-md-3">
    <h2 style="font-size: 30px; font-family: 'Karla', sans-serif; font-weight: bold">University Type</h2>
    <h3 style="font-size: 24px; font-family: 'Karla', sans-serif;"><%= @university.university_type %> institution</h3>
  </div>

  <div class="col-md-3">
    <h2 style="font-size: 30px; font-family: 'Karla', sans-serif; font-weight: bold">Acceptance rate</h2>
    <h3 style="font-size: 24px; font-family: 'Karla', sans-serif;"><%= @university.acceptance_rate %>%</h3>
  </div>

  <div class="col-md-3">
    <h2 style="font-size: 30px; font-family: 'Karla', sans-serif; font-weight: bold">Tuition</h2>
    <h3 style="font-size: 24px; font-family: 'Karla', sans-serif;"><%= @university.tuition %>/year</h3>
  </div>

  <div class="col-md-12">
    <h2 style="font-size: 30px; font-family: 'Karla', sans-serif; font-weight: bold">Location</h2>
    <h3 style="font-size: 21px; font-family: 'Karla', sans-serif;"><%= @university.location %></h3>
  </div>

  <div class="col-md-12">
    <h2 style="font-size: 30px; font-family: 'Karla', sans-serif; font-weight: bold">Weather</h2>
    <h3 style="font-size: 21px; font-family: 'Karla', sans-serif;" ><%= @university.weather %></h3>
  </div>

  <div class="col-md-12">
    <h2 style="font-size: 30px; font-family: 'Karla', sans-serif; font-weight: bold">Website</h2>
    <%=link_to @university.university_link.to_s, @university.university_link.to_s, target: :_blank, :style => 'font-size: 21px' %>
  </div>

</div>