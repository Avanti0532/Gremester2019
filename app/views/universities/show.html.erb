<div class="container">

  <section class="home_banner_area_university">
    <div class="banner_inner d-flex align-items-center">
      <div class="overlay bg-parallax" data-stellar-ratio="0.9" data-stellar-vertical-offset="0" data-background="" style="transform: translateY(-23.5182px);"></div>
      <div class="container">
        <div class="col-lg-12">
          <h1 id="university_name"><%= @university.university_name %></h1>
        </div>
      </div>
    </div>
  </section>
  <br>
  <br>
  <br>
  <h3 id="university_desc"><%= @university.university_desc %></h3>

  <br>
  <br>

  <div class="col-md-3">
    <h2 id="label">Ranking</h2>
    <h3 id="university_rank">#<%= @university.rank %></h3>
  </div>


  <div class="col-md-3">
    <h2 id="label">University Type</h2>
    <h3 id="university_type"><%= @university.university_type %> institution</h3>
  </div>

  <div class="col-md-3">
    <h2 id="label">Acceptance rate</h2>
    <h3 id="university_acceptance_rate"><%= @university.acceptance_rate %>%</h3>
  </div>

  <div class="col-md-3">
    <h2 id="label">Tuition</h2>
    <h3 id="university_tuition"><%= @university.tuition %>/year</h3>
  </div>

  <div class="col-md-12">
    <h2 id="label">Location</h2>
    <h3 id="university_location"><%= @university.location %></h3>
  </div>

  <div class="col-md-12">
    <h2 id="label">Weather</h2>
    <h3 id="university_weather" ><%= @university.weather %></h3>
  </div>

  <div class="col-md-12">
    <h2 id="label">Website</h2>
    <%=link_to @university.university_link.to_s, @university.university_link.to_s, target: :_blank, :id => 'university_website' %>
  </div>

</div>