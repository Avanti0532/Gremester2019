<%= stylesheet_link_tag 'faculty_evaluations' %>
<%= javascript_include_tag 'faculty_otherEvaluation' %>

<link href="https://cdn.datatables.net/1.10.19/css/jquery.dataTables.min.css" rel="stylesheet"/>
<link href="https://cdn.datatables.net/select/1.3.0/css/select.bootstrap.min.css" rel="stylesheet" />
<script src="https://ajax.googleapis.com/ajax/libs/jquery/2.1.3/jquery.min.js"></script>
<script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.2/js/bootstrap.min.js"></script>
<%= javascript_include_tag "yeti" %>


<%if faculty_signed_in? %>
  <br>
  <br>
  <div id ='fevaluationTable' class="form-group">
    <table id='facultyOEvaluationTable' class="table table-striped table-bordered">
      <thead>
      <tr>
        <th>Professor Name</th>
        <th>Date of Evaluation</th>
        <th>Score</th>
        <th>Comments</th>
      </tr>
      </thead>
      <tbody>
      <% if @evaluations != nil %>
        <% @evaluations.each do |evaluation| %>
          <tr>
            <td><%="#{evaluation.faculty.first_name} #{evaluation.faculty.last_name}" %></td>
            <td><%= evaluation.created_at.try(:strftime,"%m-%d-%Y") %></td>
            <td><%= evaluation.score %></td>
            <td><%= evaluation.comment %></td>
          </tr>
        <% end %>
      <% end %>
      </tbody>
    </table>
  </div>
<%end %>